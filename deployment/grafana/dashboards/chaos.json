        "enable": true,
        "hide": true,
        "iconColor": "rgba(0, 211, 255, 1)",
        "name": "Annotations & Alerts",
        "type": "dashboard"
      }
    ]
  },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 0,
  "links": [],
  "liveNow": false,
  "panels": [
    {
      "id": 1,
      "title": "Order E2E p95 Latency",
      "type": "timeseries",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum(rate(processing_time_ms_bucket[5m])) by (le, service))",
          "legendFormat": "p95 Latency"
        }
      ],
      "gridPos": { "h": 8, "w": 16, "x": 0, "y": 0 }
    },
    {
      "id": 2,
      "title": "DLT Count",
      "type": "stat",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(dlt_messages_total)",
          "legendFormat": "Total DLQ"
        }
      ],
      "gridPos": { "h": 4, "w": 8, "x": 16, "y": 0 }
    },
    {
      "id": 3,
      "title": "SLO Burn Rate (1h)",
      "type": "gauge",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "orders_slo_burn_rate{window=\"1h\"}",
          "legendFormat": "Burn Rate"
        }
      ],
      "gridPos": { "h": 4, "w": 4, "x": 16, "y": 4 }
    },
    {
      "id": 6,
      "title": "SLO Burn Rate (6h)",
      "type": "gauge",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "orders_slo_burn_rate{window=\"6h\"}",
          "legendFormat": "Burn Rate 6h"
        }
      ],
      "gridPos": { "h": 4, "w": 4, "x": 20, "y": 4 }
    },
    {
      "id": 4,
      "title": "Kafka Consumer Lag",
      "type": "timeseries",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(kafka_consumer_lag) by (topic)",
          "legendFormat": "{{topic}}"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 }
    },
    {
      "id": 5,
      "title": "Throughput (msg/s)",
      "type": "timeseries",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(kafka_consumer_records_consumed_total[1m])) by (topic)",
          "legendFormat": "{{topic}}"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 }
    }
  ],
